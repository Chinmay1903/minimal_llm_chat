# -----------------------------
# Root-level env & secrets
# -----------------------------
.env
.env.local
.env.*.local
!/.env.example

# If you keep per-app examples:
!/backend/.env.example
!/frontend/.env.example

# -----------------------------
# OS junk
# -----------------------------
.DS_Store
Thumbs.db
desktop.ini

# -----------------------------
# Editors / IDEs
# -----------------------------
.vscode/*
!.vscode/extensions.json
!.vscode/settings.json
.idea/
*.iml

# -----------------------------
# Python / FastAPI backend
# -----------------------------
backend/__pycache__/
backend/**/*.pyc
backend/.mypy_cache/
backend/.pytest_cache/
backend/.ruff_cache/
backend/.coverage
backend/.coverage.*
backend/htmlcov/
backend/coverage.xml

# virtual envs
.venv/
venv/

# packaging / builds
backend/build/
backend/dist/
backend/*.egg-info/

# local DBs / state
local.db
backend/local.db
backend/*.sqlite3
backend/*.db

# logs / runtime
backend/logs/
backend/*.log

# If you copy frontend build into backend/static, ignore it by default:
backend/static/*
# (optional) keep a placeholder if you use one
!backend/static/.keep

# -----------------------------
# Node / React frontend
# -----------------------------
frontend/node_modules/
frontend/.vite/
frontend/dist/
frontend/.cache/
frontend/npm-debug.log*
frontend/yarn-error.log*
frontend/pnpm-debug.log*
frontend/.parcel-cache/

# Vite env files (keep examples only)
frontend/.env
frontend/.env.local
frontend/.env.*.local

# -----------------------------
# Top-level node artifacts (if you ever run tools at repo root)
# -----------------------------
node_modules/
npm-debug.log*
yarn-error.log*
pnpm-debug.log*

